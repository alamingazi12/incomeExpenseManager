<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/mttypetransaction3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/mdatelayout3"
        android:fontFamily="@font/amaranth"
        android:text="HouseHold"
        android:textColor="#000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/mdescription3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mttypetransaction3"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/mdatelayout3"
        android:fontFamily="@font/amaranth"
        android:text="Description"
        android:textColor="#000"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/mamount3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="9dp"
        android:fontFamily="@font/amaranth"
        android:layout_marginBottom="25dp"
        android:text="25000"
        android:textSize="16dp"
        android:textColor="#00c853"/>

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="60dp"
        android:id="@+id/mdatelayout3"
        android:layout_marginLeft="10dp"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/mwday3"
            android:text="Sat"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/mday3"
            android:textColor="#fff"
            android:text="15"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/mwday3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </RelativeLayout>

    <TextView
        android:id="@+id/currency_more3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="3dp"
        android:textColor="#00c853"
        android:layout_toStartOf="@+id/mamount3"
        android:text="BDT" />

</RelativeLayout>