<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_width="match_parent"
    android:layout_height="140dp">


    <TextView
        android:id="@+id/maonthitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"

        android:padding="1dp"
        android:text="January"
        android:textColor="#7e57c2"
        android:textSize="22dp" />

    <TextView
            android:id="@+id/yearitem"
            android:padding="1dp"
            android:textSize="15dp"
            android:gravity="center"
            android:text="2010"
            android:textColor="#000"
            android:fontFamily="sans-serif-condensed-light"
            android:layout_marginTop="55dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:background="#b388ff"

            android:layout_width="match_parent"
            android:layout_marginTop="85dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mincomehead"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/amaranth"

                android:text="Income "
                android:textColor="#ffff"
                android:textSize="13dp" />

            <TextView

                android:id="@+id/currencyincome"
                android:layout_marginTop="2dp"

                android:layout_width="wrap_content"
                 android:fontFamily="@font/amaranth"
                android:layout_height="wrap_content"

                android:layout_toEndOf="@+id/mexpensehead"
                android:text="BDT"
                android:textColor="#fff"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/mincome"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="1dp"
                android:layout_toEndOf="@+id/currencyincome"
                android:fontFamily="@font/amaranth"
                android:paddingLeft="2dp"
                android:text="10000"
                android:textColor="#fff"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/mexpensehead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mincomehead"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/amaranth"
                android:text="Expense "
                android:textColor="#fff"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/currencyexpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mincomehead"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/mexpensehead"
                android:fontFamily="@font/amaranth"
                android:text="BDT"
                android:textColor="#fff"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/mexpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mincome"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"


                android:layout_toEndOf="@+id/currencyexpense"

                android:fontFamily="@font/amaranth"
                android:paddingLeft="2dp"
                android:text="20000 "
                android:textColor="#fff"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/saving_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mexpensehead"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/amaranth"
                android:text="Savings"
                android:textColor="#fff"
                android:textSize="13dp" />

            <TextView

                android:id="@+id/saving_currency"
                android:fontFamily="@font/amaranth"
                android:textSize="11dp"
                android:layout_marginTop="2dp"
                android:text="BDT"
                android:layout_toEndOf="@id/mexpensehead"
                android:layout_below="@+id/mexpensehead"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/saving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mexpense"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"


                android:layout_toEndOf="@+id/saving_currency"
                android:fontFamily="@font/amaranth"
                android:paddingLeft="2dp"
                android:text="20000 "
                android:textColor="#fff"
                android:textSize="12dp" />


        </RelativeLayout>




    </androidx.cardview.widget.CardView>


